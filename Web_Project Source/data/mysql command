create table Pecha_Member(
user_id varchar(20) primary key, 
user_password varchar(40), 
user_password_q varchar(255), 
user_password_a varchar(255), 
user_name varchar(10), 
user_nickname varchar(10),
user_sex char(1), 
user_age int, 
user_birthday date, 
user_email varchar(40), 
user_address varchar(255), 
user_phonenum varchar(10), 
user_homepage varchar(100), 
user_mailing char(2), 
user_sms char(2),
 user_profile text, 
user_recommend varchar(20), 
user_level int(4) default 3, 
user_login_time datetime, 
user_login_ip varchar(16),
 user_jointime timestamp default current_timestamp, 
user_ip varchar(16));

